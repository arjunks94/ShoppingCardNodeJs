<!-- all-users.hbs -->

<section>
  <div class="container">

        <div class="row justify-content-between">
        <a href="/admin/signup" class="btn btn-primary mt-3 float-right">Create Admin User</a>
    </div>

    <h1>All Users</h1>
    {{#if allusers.length}}
    <table id="allUsers">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">User ID</th>
          <th scope="col">User Type</th>
        </tr>
      </thead>
      <tbody>
        {{#each allusers}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.userid}}</td>
          <td>{{this.usertype}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    {{else}}
    <p>No users found.</p>
    {{/if}}
  </div>
</section>

<script>
  $(document).ready(function() {
    $('#allUsers').DataTable();
  });
</script>

<style>
  body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    padding: 20px;
  }

  h1 {
    text-align: center;
    margin-bottom: 20px;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }

  th,
  td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
  }

  th {
    background-color: #f2f2f2;
  }

  td {
    vertical-align: top;
  }

  .no-users {
    text-align: center;
    margin-top: 20px;
  }
</style>
