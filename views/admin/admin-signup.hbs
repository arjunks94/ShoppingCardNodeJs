<section>
    <div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 m-auto">
            <h2 class="text-center mt-5">Create Admin Account</h2>
            <form action="/admin/signup" method="post">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" placeholder="Enter Full Name">
                </div>
                <div class="form-group">
                    <label>User ID</label>
                    <input type="text" class="form-control" name="userid" placeholder="">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="Password" placeholder="Password">
                </div>
                <div class="form-group">
                    <label>User Type</label><br>
                    <input type="radio" name="usertype" value="admin" checked> Admin<br>
                    <input type="radio" name="usertype" value="product-admin"> Product Admin<br>
                    <input type="radio" name="usertype" value="superadmin"> Superadmin
                </div>
                <div class="form-group d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary float-right">Create Account</button>
                </div>
            </form>
        </div>
    </div>
</div>

</section>