    <section>
        <div class="container mt-5 ml-2">
            <div class="row">

                {{#each products}}
                <div class="col-md-3 mt-4">
                    <div class="card" style="width: 15rem; height: 20rem">
                        <img  style="width: auto;height: 10rem" class="card-img-top"
                            src="{{this.image}}"
                            alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <a href="#" class="btn btn-primary">Add to Cart</a>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </section>